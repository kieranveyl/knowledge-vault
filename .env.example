# Application environment settings
NODE_ENV=development
SERVER_PORT=3001

# PostgreSQL configuration
DB_HOST=localhost
DB_PORT=54321
DB_NAME=knowledge
DB_USER=postgres
DB_PASSWORD=password
DB_SSL=false
DB_MAX_CONNECTIONS=10

# Feature flags
USE_POSTGRES=true
AUTO_MIGRATE=true

# Observability
OBSERVABILITY_ENABLED=true
TELEMETRY_RETENTION_DAYS=30

# Rate limit policy
RATE_LIMIT_QUERY_BURST=5
RATE_LIMIT_QUERY_SUSTAINED=60
RATE_LIMIT_MUTATION_BURST=1
RATE_LIMIT_MUTATION_WINDOW_SECONDS=5
RATE_LIMIT_MUTATION_SUSTAINED=12
RATE_LIMIT_DRAFT_BURST=10
RATE_LIMIT_DRAFT_SUSTAINED=300
